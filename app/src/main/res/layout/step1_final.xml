<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/subway"
        android:layout_width="236dp"
        android:layout_height="38dp"
        android:src="@drawable/page_1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="200dp"/>
    <LinearLayout
        android:id="@+id/fb_back"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:background="@drawable/blue_background"
        app:layout_constraintTop_toBottomOf="@id/subway"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_vertical"
        android:paddingStart="22dp"
        android:layout_marginTop="100dp">
        <LinearLayout
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="12dp"
                android:layout_height="21dp"
                android:src="@drawable/logo_fb"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="1dp"
                android:layout_height="24dp"
                android:background="@color/white"/>
        </LinearLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:text="페이스북 계정으로 로그인"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/kt_back"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:background="@drawable/yellow_background"
        app:layout_constraintTop_toBottomOf="@id/fb_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_vertical"
        android:paddingStart="22dp"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="23dp"
                android:layout_height="22dp"
                android:src="@drawable/logo_kt"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="1dp"
                android:layout_height="24dp"
                android:background="@color/white"/>
        </LinearLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:text="카카오 계정으로 로그인"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/arrow"
        android:layout_width="7dp"
        android:layout_height="7dp"
        android:src="@drawable/arrows"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/skip"
        app:layout_constraintTop_toTopOf="@id/skip"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginEnd="5dp"
        app:layout_constraintBottom_toBottomOf="@id/skip"/>
    <TextView
        android:id="@+id/skip"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/kt_back"
        app:layout_constraintStart_toEndOf="@id/arrow"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입 건너뛰고 레시피 확인하기"
        android:textColor="#9b9b9b"
        android:textSize="14sp" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="134dp"
        android:src="@drawable/sandwich_bg_1"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>