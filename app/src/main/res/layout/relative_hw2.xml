<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/refText"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:background="@color/teal_200"/>
    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/refText"
        android:layout_alignStart="@+id/refText"
        android:background="@color/purple_200"/>
    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_toStartOf="@+id/refText"
        android:layout_alignTop="@+id/refText"
        android:background="@color/purple_200"/>
    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/refText"
        android:layout_above="@+id/refText"
        android:background="@color/purple_200"/>
    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_toEndOf="@+id/refText"
        android:layout_alignTop="@+id/refText"
        android:background="@color/purple_200"/>
    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_toStartOf="@+id/refText"
        android:layout_above="@+id/refText"
        android:background="@color/teal_200"/>
    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_toEndOf="@+id/refText"
        android:layout_above="@+id/refText"
        android:background="@color/teal_200"/>
    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_toStartOf="@id/refText"
        android:layout_below="@+id/refText"
        android:background="@color/teal_200"/>
    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_toEndOf="@+id/refText"
        android:layout_below="@id/refText"
        android:background="@color/teal_200"/>
</RelativeLayout>